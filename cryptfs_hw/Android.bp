sourceFiles = ["cryptfs_hw.c"]

commonSharedLibraries = [
    "libcutils",
    "libutils",
    "libdl",
    "libhardware",
    "liblog",
]

cc_library_shared {
    name: "libcryptfs_hw",
    header_libs: ["qseecom-kernel-headers",
                  "libhardware_headers"],
    cflags: ["-DCONFIG_HW_DISK_ENCRYPTION"],
    srcs: sourceFiles,
    shared_libs: commonSharedLibraries,

    owner: "qti",
}

cc_library_headers {
    name: "libcryptfs_hw_headers",
    export_include_dirs: ["."],
}
